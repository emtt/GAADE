<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gaade.mobilize.com.aaade.MainActivity">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <TextView
            android:id="@+id/textView"
            android:text="Hello world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" />
        <EditText
            android:hint="Escribe tu nombre"
            android:id="@+id/editText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />
        <Button
            android:id="@+id/btnMain"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="Hola"
            android:layout_below="@+id/editText"
            android:onClick="btnEvent"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />

        <Button
            android:id="@+id/btnAddView"
            android:layout_below="@+id/btnMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open AddView"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="115dp" />
        <Button
            android:id="@+id/btnCustomView"
            android:layout_below="@+id/btnAddView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open CustomView"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="115dp" />

        <Button
            android:id="@+id/btnRecicler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnCustomView"
            android:text="Open ReciclerView" />

    </RelativeLayout>




</android.support.constraint.ConstraintLayout>
